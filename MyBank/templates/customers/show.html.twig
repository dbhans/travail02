{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ customer.gender }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{{ customer.birth ? customer.birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ customer.city }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ customer.state }}</td>
            </tr>
            <tr>
                <th>Pin</th>
                <td>{{ customer.pin }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ customer.mobile }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customers_index') }}">back to list</a>

    <a href="{{ path('customers_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customers/_delete_form.html.twig') }}
{% endblock %}
